<!DOCTYPE html>
<html>
<head>
  <title>MusicAlbum</title>
  <link rel="stylesheet" href="../css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <h1>MusicAlbum</h1>

    <table class="book-table">
      <tbody>
        <tr>
          <th>Musicformat <a href="/formatview">view</a></th>
          <th>Musicname<a href="/msn">view</a></th>
          <th>Composername<a href="/cps">view</a></th>
          <th>Actions</th>
        </tr>
        <% for(var i=0; i < musicalbum.length; i++) { %>
          <tr>
            
            <td><%= musicalbum[i].musicformat%></td>
            <td><%= musicalbum[i].music%></td>
            <td><%= musicalbum[i].Composer %></td>

            <td>
              <a href="/viewalbum?id1=<%=musicalbum[i].musicformat%>&id2=<%=musicalbum[i].music%>&id3=<%=musicalbum[i].Composer%>">view</a>
              <a href="/updateab/<%= musicalbum[i].musicID %>">Edit</a>
              <a href="/delete/<%= musicalbum[i].musicID %>">Delete</a>
            </td> 
          </tr>
        <% } %>
      
      </tbody>
      <tfoot>
        <tr>
          <td><a href="/inab4" class="btn btn-success">Create Musicformat</a></td>
          <td><a href="/inab3" class="btn btn-primary">Create Music</a></td>
          <td><a href="/inab2" class="btn btn-danger">Create Composer</a></td>
        </tr>
      </tfoot>
      </table>
      
  

    
    <div class="link-center">
      <br>
      <br>
      <br>
      
      <a href="/inab">Create MusicAlbum</a>
    </div>
  </body>
  </html>

